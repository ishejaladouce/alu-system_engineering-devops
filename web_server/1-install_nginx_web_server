#!/usr/bin/env bash
# Install Nginx, configure it to serve a page with 'Holberton School for the win!', and ensure it runs on port 80

# Update package lists
apt-get update -y

# Install Nginx
apt-get install -y nginx

# Make sure the default site root exists
mkdir -p /var/www/html

# Create index.html with required content
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure proper permissions (optional but safe)
chown -R www-data:www-data /var/www/html
chmod -R 755 /var/www/html

# Start Nginx (without systemctl)
service nginx start || service nginx restart
