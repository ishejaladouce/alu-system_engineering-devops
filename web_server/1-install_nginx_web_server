#!/usr/bin/env bash
# Install and configure Nginx to serve a page containing "Holberton School"

# Update package list and install nginx silently
apt-get update -y
apt-get install nginx -y

# Ensure nginx is listening on port 80 (default)
# Create a simple HTML page with required text
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html

# Restart nginx using service command (not systemctl)
service nginx restart
