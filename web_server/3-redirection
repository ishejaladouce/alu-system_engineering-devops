#!/usr/bin/env bash
# 3-redirection
# Configures nginx to redirect /redirect_me (301 Moved Permanently)

# Update & install nginx
apt-get update -y
apt-get install nginx -y

# Backup config
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Insert redirect inside the server block (after 'server_name _;')
sed -i '/server_name _;/a \\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Test nginx configuration before restarting
nginx -t && service nginx restart
