#!/usr/bin/env bash
# Configure Nginx to run as nginx user and listen on port 8080

# Update nginx.conf to run as nginx user
sed -i 's/user .*/user nginx;/' /etc/nginx/nginx.conf

# Change default site to listen on port 8080 instead of 80
sed -i 's/listen 80/listen 8080/g' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80/listen \[::\]:8080/g' /etc/nginx/sites-available/default

# Ensure nginx user exists (it should already exist)
id -u nginx &>/dev/null || useradd -r -s /bin/false nginx

# Kill any running nginx processes
pkill -f nginx

# Start nginx as nginx user
sudo -u nginx /usr/sbin/nginx
